modules = ["swift-5.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip", "git", "curl", "bash", "which", "file"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Server"

[[workflows.workflow]]
name = "Flutter Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./run_flutter_web.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 44957
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd build/web && python3 -m http.server 5000"]
build = ["bash", "-c", "export PATH=/home/runner/flutter/bin:$PATH && flutter build web --release"]
